<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Campo para a moeda base -->
    <EditText
        android:id="@+id/edit_base_currency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Moeda atual (ex.: USD)" />

    <!-- Campo para a moeda alvo -->
    <EditText
        android:id="@+id/edit_target_currency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Moeda alvo (ex.: EUR)" />

    <!-- Campo para o valor -->
    <EditText
        android:id="@+id/edit_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Valor a ser convertido"
        android:inputType="numberDecimal" />

    <!-- Botão para realizar a conversão -->
    <Button
        android:id="@+id/btn_convert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Converter" />

    <!-- Texto para exibir o resultado -->
    <TextView
        android:id="@+id/text_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:textSize="18sp"
        android:textColor="#000000"
        android:text="Resultado aparecerá aqui" />
</LinearLayout>